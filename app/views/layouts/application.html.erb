<!DOCTYPE html>
<html>
  <head>
    <title>JustKeepBuilding</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/css/materialize.min.css">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>      
  </head>

  <body>
    <%= link_to 'Home', home_index_path %>
    <%= link_to 'New Wall', new_wall_path %>
    <h2> Hello world under constrution </h2>
    <ul>
      <% if user_signed_in? %>
        <li> <%= link_to 'Sign Out', destroy_user_session_path, method: :delete %> </li>
        <li> <%= link_to 'Profile', edit_user_registration_path(current_user) %> </li>
        <li> <%= link_to 'Project Page', user_path(current_user) %> </li>
      <% else %>
        <li><%= link_to 'Sign In', new_user_session_path %>  </li>
        <li><%= link_to 'Sign Up', new_user_registration_path %>  </li>
      <% end %>
    </ul>
      <p class="notice"> <%= notice %> </p>
      <p class="alert">  <%= alert %> </p>
    <%= yield %>
  </body>
</html>
